#:kivy 2.1.0

<MyRoot>:
    id_status_switch: id_status_switch
    id_status_switch2: id_status_switch2
    id_status_switch3: id_status_switch3
    id_status_switch4: id_status_switch4



    BoxLayout:
        orientation:'vertical'
        
        Label:
            background_color: 220/255, 223/255, 224/255, 1
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            id: id_status_switch
            text: 'WiFi Switch Controller\nFür die Könige'
            font_size: 40
            color: 34/255, 164/255, 224/255, 1
            halign: 'center'
            valign: 'center'
            
        
        BoxLayout:
            orientation:'horizontal'
            size: 600, 150

            Label:
                id: id_name_switch
                text: 'Globus'
                font_size: 32

            Label:
                id: id_status_switch
                text: "-"
                font_size: 32

            Switch:
                id: id_switch
                active: root.initializeWifiStatus('192.168.0.100')
                on_active: root.switch_click('192.168.0.100', 'switch1')

        BoxLayout:
            orientation:'horizontal'
            size: 600, 150

            Label:
                id: id_name_switch2
                text: 'Platzhalter'
                font_size: 24

            Label:
                id: id_status_switch2
                text: "-"
                font_size: 64

            Switch:
                id: id_switch2
                

        BoxLayout:
            orientation:'horizontal'
            
            Label:
                id: id_name_switch3
                text: 'Platzhalter'
                font_size: 24

            Label:
                id: id_status_switch3
                text: "-"
                font_size: 64

            Switch:
                id: id_switch3
                
                
        BoxLayout:
            orientation:'horizontal'
            
            Label:
                id: id_name_switch4
                text: 'Platzhalter'
                font_size: 24

            Label:
                id: id_status_switch4
                text: "-"
                font_size: 64

            Switch:
                id: id_switch4
                