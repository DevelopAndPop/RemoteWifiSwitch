                text: 'Smart Home Controller'
                font_name: 'fonts/SitkaSmall-Bold-01.ttf'
                font_size: self.width/13
                color: 168/255, 9/255, 241/255, 1  #dark-purple
                halign: 'center'
                valign: 'center'
                size_hint: 1, 1
                
            Button:
                on_press: root.checkWifiConnection()
                background_color: 20, 20, 20, 0
                size_hint: 0.1, 0.8
                pos_hint: {'center_x': 0.5}
                center_y: self.height/0.5

                Image:
                    # background_color: 220/255, 223/255, 224/255, 0.5
                    # canvas.before:
                    #     Color:
                    #         rgba: self.background_color
                    #     Rectangle:
                    #         size: self.size
                    #         pos: self.pos
                    source: 'data/header_icon.png'
                    size_hint_y: None
                    height: self.parent.height
                    allow_stretch: False
                    center_x: self.parent.center_x 
                    center_y: self.parent.center_y 
                                
            BoxLayout:
                orientation:'horizontal'

                AnchorLayout:
                    anchor_x: 'right'
                    anchor_y: 'center'
                    
                    Image:
                        source: 'data/idea.png'
                        size_hint: 0.75, 0.5
                        
                AnchorLayout:
