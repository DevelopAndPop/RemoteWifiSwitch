#:kivy 2.1.0

<MyRoot>:
    status_Switch: status_Switch
    
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "WiFi Switch"
            font_size: 64
            color: 0.19, 0.66, 0.24, 1
        Label:
            id: status_Switch
            text: "-"
            font_size: 64
        Button:
            text: "On"
            font_size: 32
            background_color: 0.19, 0.66, 0.24, 1
            size: 20,20
            on_press: root.switchOn()
        Button:
            text: "Off"
            font_size: 32
            background_color: 0.59, 0.56, 0.54, 1
            size: 20,20
            on_press: root.switchOff()

